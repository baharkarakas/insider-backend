{
  "info": {
    "name": "Insider Backend (Short)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "insider-backend-short"
  },
  "item": [
    {
      "name": "Health",
      "request": { "method": "GET", "url": "http://localhost:8080/health" }
    },
    {
      "name": "Auth / Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "http://localhost:8080/api/v1/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\"username\":\"alice\",\"email\":\"a@a.com\",\"password\":\"pass\"}"
        }
      }
    },
    {
      "name": "Auth / Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "http://localhost:8080/api/v1/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\"email\":\"a@a.com\",\"password\":\"pass\"}"
        }
      }
    },
    {
      "name": "Me",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": "http://localhost:8080/api/v1/me"
      }
    },
    {
      "name": "Balance / Current",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": "http://localhost:8080/api/v1/balances/current"
      }
    },
    {
      "name": "Transactions / Transfer",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" },
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Idempotency-Key", "value": "transfer-1" }
        ],
        "url": "http://localhost:8080/api/v1/transactions/transfer",
        "body": {
          "mode": "raw",
          "raw": "{\"to_user_id\":\"<TARGET_USER_ID>\",\"amount\":500}"
        }
      }
    },
    {
      "name": "Transactions / History",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": "http://localhost:8080/api/v1/transactions/history?limit=10"
      }
    }
  ],
  "variable": [{ "key": "access_token", "value": "" }]
}
